{
  "name": "Ticketer",
  "description": "Ticket tracking and productivity",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "debugger",
    "alarms",
    "storage",
    "background",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "optional_permissions": [],
  "action": {
    "default_popup": "index.html",
    "default_title": "Ticketer"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  }
}